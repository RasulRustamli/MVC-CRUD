@model Product

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Default form</h4>
                    <p class="card-description"> Create Product Form </p>
                    <form class="forms-sample" method="post">
           
                        <div>
                            <label>Choose a category:</label>
                            @Html.DropDownListFor(c => c.CategoryId, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Name"></label>
                            <input asp-for="@Model.Name" class="form-control" placeholder="Name">
                            <span class="text-danger" asp-validation-for="@Model.Name"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Price"></label>
                            <input asp-for="@Model.Price" class="form-control" placeholder="Price">
                            <span class="text-danger" asp-validation-for="@Model.Price"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="@Model.ImageUrl"></label>
                            <input asp-for="@Model.ImageUrl" type="file" class="form-control" accept="image/*" placeholder="Image">
                            <span class="text-danger" asp-validation-for="@Model.ImageUrl"></span>
                        </div>
                        <button class="btn btn-light">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_Validation"></partial>
}

